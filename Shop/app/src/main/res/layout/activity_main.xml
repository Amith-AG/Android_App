<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:text="AMR BILLING"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/autoView"
        app:layout_constraintEnd_toEndOf="@+id/autoView"
        app:layout_constraintStart_toStartOf="@+id/autoView"
        app:layout_constraintTop_toTopOf="parent" />

    <AutoCompleteTextView
        android:id="@+id/autoView"
        android:layout_width="275dp"
        android:layout_height="40dp"
        android:layout_marginBottom="30dp"
        android:hint="Enter the item"
        app:layout_constraintBottom_toTopOf="@+id/e4"
        app:layout_constraintEnd_toEndOf="@+id/e4"
        app:layout_constraintStart_toStartOf="@+id/e4" />

    <EditText
        android:id="@+id/e4"
        android:layout_width="275dp"
        android:layout_height="40dp"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:hint="Quantity"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/e0"
        app:layout_constraintEnd_toEndOf="@+id/e0"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/e0" />

    <TextView
        android:id="@+id/e0"
        android:layout_width="275dp"
        android:layout_height="40dp"
        android:layout_marginBottom="30dp"
        android:text=" Cost:"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/e1"
        app:layout_constraintEnd_toEndOf="@+id/e1"
        app:layout_constraintStart_toStartOf="@+id/e1" />

    <TextView
        android:id="@+id/e1"
        android:layout_width="275dp"
        android:layout_height="40dp"
        android:layout_marginBottom="30dp"

        android:text=" CGST:"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/e2"
        app:layout_constraintEnd_toEndOf="@+id/e2"
        app:layout_constraintStart_toStartOf="@+id/e2" />

    <TextView
        android:id="@+id/e2"
        android:layout_width="275dp"
        android:layout_height="40dp"
        android:layout_marginBottom="30dp"
        android:text=" SGST:"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/e3"
        app:layout_constraintEnd_toEndOf="@+id/e3"
        app:layout_constraintStart_toStartOf="@+id/e3" />

    <TextView
        android:id="@+id/e3"
        android:layout_width="275dp"
        android:layout_height="40dp"
        android:layout_marginBottom="130dp"
        android:text=" Total:"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button2"
        app:layout_constraintStart_toStartOf="@+id/button" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="48dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="50dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>